
extends layout

block content

	// Wrapper
	#wrapper
		img(class="imageCenter" src='/images/mice.png')
		img(src='/images/logo.jpg')
		p Enter your info below to join our mailing list
	
		// ADD USER
		h2 Add User
		#addUser
			fieldset
				input#inputUserName(type='text', placeholder='Username')
				input#inputUserEmail(type='text', placeholder='Email')
				br
				input#inputUserFirstName(type='text', placeholder='First Name')
				input#inputUserLastName(type='text', placeholder='Last Name')
				br
				input#inputUserCity(type='text', placeholder='City')
				input#inputUserState(type='text', placeholder='State')
				br
				button#btnAddUser Add User
		// /ADD USER
		
		// USER INFO
		#userInfo
			h2 User Info
			p
				strong First Name:
				|  <span id='userFirstName'></span>
				br
				strong Last Name:
				|  <span id='userLastName'></span>
				br
				strong Email:
				|  <span id='userEmail'></span>
				br
				strong City:
				|  <span id='userCity'></span>
				br
				strong State:
				|  <span id='userState'></span>
				
		// /USER INFO

		// USER LIST
		h2 User List
		#userList
			table
				thead
					th UserName
					th Email
					th Delete?
					tbody
		// /USER LIST
		
		

	// /WRAPPER
